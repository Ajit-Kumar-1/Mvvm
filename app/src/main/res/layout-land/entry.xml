<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="entry" type="com.example.mvvm.model.Entry" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:id="@+id/black_line"
            android:contentDescription="@string/black_line" />
        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/single_entry"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:contentDescription="@string/avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/avatar"
                android:layout_weight="0.5"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">
                <TextView
                    android:text="@{entry.name}"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_entry" />
                <TextView
                    android:text="@{entry.gender}"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/gender_entry" />
                <TextView
                    android:text="@{entry.email}"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_entry" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>